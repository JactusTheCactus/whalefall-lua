function love.draw()
	tmp = create(25, nil, 50, 75)
	love.graphics.rectangle("fill", tmp.x, tmp.y, tmp.width, tmp.height)
	love.graphics.setColor(1, 1, 1)
	text()
	text{
		content = "Welcome to 'Whalefall'!",
		width = 50,
		x = 50,
		scale = 1
	}
	square = create(25, nil, 50, 75)
	love.graphics.rectangle(
		"fill",
		square.x,
		square.y,
		square.width,
		square.height
	)
end
